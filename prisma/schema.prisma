generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id
  name       String
  username   String     @unique
  email      String     @unique
  image      String
  bio        String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  threads    Thread[]
  followers  Follower[] @relation("FollowerToUser")
  followings Follower[] @relation("FollowingToUser")
  likes      Like[]     @relation("UserLikes")
}

model Follower {
  id          String @id @default(uuid())
  follower    User   @relation("FollowerToUser", fields: [followerId], references: [id])
  followerId  String
  following   User   @relation("FollowingToUser", fields: [followingId], references: [id])
  followingId String
}

model Thread {
  id        String   @id @default(uuid())
  text      String   @db.Text
  parentId  String?
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent    Thread?  @relation("Children", fields: [parentId], references: [id], onDelete: Cascade)
  children  Thread[] @relation("Children")
  likes     Like[]   @relation("PostLikes")
}

model Like {
  id       String @id @default(uuid())
  userId   String
  threadId String
  user     User   @relation("UserLikes", fields: [userId], references: [id], onDelete: Cascade)
  thread   Thread @relation("PostLikes", fields: [threadId], references: [id], onDelete: Cascade)
}
